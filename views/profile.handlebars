<div class="container">
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <div class="text-center">
            <img src="{{data.GeneralInfos.0.profilePic}}"
                style="object-fit: cover; width:200px; height:200px; border-radius: 50%; border-width: 3px; border-style: solid; border-color: green;"
                alt="...">
        </div>
        <h1 class="display-4">{{data.username}}</h1>
        <p class="lead">My details.</p>
    </div>
    <div class="row my-4">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>
                        <strong>General Information</strong>
                        <button class="btn btn-primary" type="button" data-toggle="collapse"
                            data-target="#collapseFormGeneral" aria-expanded="false"
                            aria-controls="collapseFormGeneral">
                            Add New
                        </button>
                    </h4>
                </div>
                <div class="collapse" id="collapseFormGeneral">
                    <div class="card-body">
                        <form action="/general" method="POST">
                            <div class="form-row">
                                <div class="form-group col-md-8">
                                    <label for="name">Name</label>
                                    <input type="text" class="form-control" name="name" id="name" placeholder="Name">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="description">Description</label>
                                    <input type="text" class="form-control" name="description" id="description"
                                        placeholder="Description">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="address">Address</label>
                                    <input type="text" class="form-control" name="address" id="address"
                                        placeholder="Address">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="phone">Phone</label>
                                    <input type="text" class="form-control" name="phone" id="phone"
                                        placeholder="Phone Number">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="address">Profile Pic URL</label>
                                    <input type="text" class="form-control" name="profilePic" id="profilePic"
                                        placeholder="profilePic">
                                </div>
                            </div>
                            <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <hr>
                    {{#each data.GeneralInfos}}
                    <div id="stats">
                        <h6><strong>Name: </strong>{{name}}</span></h6>
                        <h6><strong>Description: </strong>{{description}}</span></h6>
                        <h6><strong>Address: </strong>{{address}}</span></h6>
                        <h6><strong>Phone: </strong>{{phone}}</span></h6>
                        <form action="/deletegeneral/{{id}}" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <hr>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>
                        <strong>Experience</strong>
                        <button class="btn btn-primary" type="button" data-toggle="collapse"
                            data-target="#collapseFormExp" aria-expanded="false" aria-controls="collapseFormExp">
                            Add New
                        </button>
                    </h4>
                </div>
                <div class="collapse" id="collapseFormExp">
                    <div class="card-body">
                        <form action="/experience" method="POST">
                            <div class="form-row">
                                <div class="form-group col-md-1 col-xl-1">
                                    <label for="entryDate">Started</label>
                                    <input type="number" min="1950" max="2019" placeholder="2017" id="entryDate"
                                        name="entryDate" class="form-control">
                                </div>
                                <div class="form-group col-md-1 col-xl-1">
                                    <label for="leaveDate">Ended</label>
                                    <input type="number" min="1950" max="2019" placeholder="2019" id="leaveDate"
                                        name="leaveDate" class="form-control">
                                </div>
                                <div class="form-group col-md-1 col-xl-10">
                                    <label for="company" class="col-xl-12">Company</label>
                                    <input type="text" id="company" name="company"
                                        class="autocomplete form-control col-xl-12 company" autocomplete="off">
                                    <div class="companySug" id="sug"></div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6 col-xl-3">
                                    <label for="city">City</label>
                                    <input type="text" class="form-control" id="city" name="city"
                                        placeholder="Monterrey">
                                </div>
                                <div class="form-group col-md-4 col-xl-3">
                                    <label for="state">State</label>
                                    <input type="text" class="form-control" id="state" name="state"
                                        placeholder="Nuevo León">
                                </div>
                                <div class="form-group col-md-4 col-xl-6">
                                    <label for="jobTitle" class="col-xl-12">Job Title</label>
                                    <input type="text" placeholder="Sales representative" class="form-control col-xl-12"
                                        id="jobTitle" name="jobTitle">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6 col-xl-12">
                                    <label class="col-xl-12" for="description">Job Description</label>
                                    <textarea class="form-control col-xl-12" rows="3" id="description"
                                        name="description"></textarea>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6 col-xl-12 tasks">
                                    <label class="col-xl-12" for="task">Tasks Performed</label>
                                    <input style="display:none" type="text" class="clone-task form-control col-xl-10"
                                        name="task" id="task"
                                        placeholder="Implemented marketing plan that increased sales by 30% and created loyalty among new and existing customers.">
                                    <input type="text" class="form-control col-xl-10" name="task1" id="task1"
                                        placeholder="Implemented marketing plan that increased sales by 30% and created loyalty among new and existing customers.">
                                    <!--<button type="submit" id="addTask" class="col-xl-1 btn btn-primary m-4">add</button>-->
                                </div>
                            </div>


                            <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <hr>
                    {{#each data.Experiences}}
                    <div id="stats">
                        <h6><strong>Job Title: </strong>{{jobTitle}}</h6>
                        <h6><strong>Company: </strong>{{company}}</h6>
                        <h6><strong>Entry Date: </strong>{{entryDate}}</h6>
                        <h6><strong>Leave Date: </strong>{{leaveDate}}</h6>
                        <h6><strong>City: </strong>{{city}}</h6>
                        <h6><strong>State: </strong>{{state}}</h6>
                        <h6><strong>Description: </strong>{{description}}</h6>
                        <h6><strong>Tasks: </strong>{{task1}}</h6>
                        <form action="/deleteexp/{{id}}" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <hr>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>
                        <strong>Skills</strong>
                        <button class="btn btn-primary" type="button" data-toggle="collapse"
                            data-target="#collapseFormSkills" aria-expanded="false" aria-controls="collapseFormSkills">
                            Add New
                        </button>
                    </h4>
                </div>
                <div class="collapse" id="collapseFormSkills">
                    <div class="card-body">
                        <form action="/skills" method="POST">
                            <div class="form-row">
                                <div class="col-md-4 col-xl-6 form-group">
                                    <label for="skillName" class="col-xl-12">Skills</label>
                                    <input type="text" placeholder="Javascript" id="skillName" name="skillName"
                                        class="col-xl-12">
                                </div>
                                <div class="col-md-4 col-xl-6 form-group">
                                    <label for="skillLevel" class="col-xl-12">Mastery of Skill</label>
                                    <select name="skillLevel" id="skillLevel" class="form-control" class="col-xl-12">
                                        <option value="0">Please select</option>
                                        <option value="Beginner">Beginner</option>
                                        <option value="Intermediate">Intermediate</option>
                                        <option value="Advanced">Advanced</option>
                                        <option value="Expert">Expert</option>
                                    </select>
                                </div>
                            </div>
                            <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <hr>
                    {{#each data.Skills}}
                    <div id="stats">
                        <h6><strong>Skill Name: </strong>{{skillName}}</h6>
                        <h6><strong>Level: </strong>{{skillLevel}}</h6>
                        <form action="/deleteskills/{{id}}" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <hr>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>
                        <strong>Languages</strong>
                        <button class="btn btn-primary" type="button" data-toggle="collapse"
                            data-target="#collapseFormLanguages" aria-expanded="false"
                            aria-controls="collapseFormLanguages">
                            Add New
                        </button>
                    </h4>
                </div>
                <div class="collapse" id="collapseFormLanguages">
                    <div class="card-body">
                        <form action="/languages" method="POST">
                            <div class="form-row">
                                <div class="col-md-4 col-xl-6 form-group">
                                    <label for="language" class="col-xl-12">Skills</label>
                                    <input type="text" placeholder="Javascript" id="language" name="language"
                                        class="col-xl-12">
                                </div>
                                <div class="col-md-4 col-xl-6 form-group">
                                    <label for="languageLevel" class="col-xl-12">Mastery language</label>
                                    <select name="languageLevel" id="languageLevel" class="form-control"
                                        class="col-xl-12">
                                        <option value="0">Please select</option>
                                        <option value="Beginner">Beginner</option>
                                        <option value="Intermediate">Intermediate</option>
                                        <option value="Advanced">Advanced</option>
                                        <option value="Expert">Expert</option>
                                    </select>
                                </div>
                            </div>
                            <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <hr>
                    {{#each data.Languages}}
                    <div id="stats">
                        <h6><strong>Language: </strong>{{language}}</h6>
                        <h6><strong>Level: </strong>{{languageLevel}}</h6>
                        <form action="/deletelanguages/{{id}}" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <hr>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>


    <div class="row my-4">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>
                        <strong>Studies</strong>
                        <button class="btn btn-primary" type="button" data-toggle="collapse"
                            data-target="#collapseFormStudies" aria-expanded="false"
                            aria-controls="collapseFormStudies">
                            Add New
                        </button>
                    </h4>
                </div>
                <div class="collapse" id="collapseFormStudies">
                    <div class="card-body">
                        <form action="/studies" method="POST">

                            <div class="form-row">
                                <div class="form-group col-md-1 col-xl-1">
                                    <label for="entryDateSchool">Started</label>
                                    <input type="number" min="1950" max="2019" placeholder="2017" id="entryDateSchool"
                                        name="entryDateSchool" class="form-control">
                                </div>
                                <div class="form-group col-md-1 col-xl-1">
                                    <label for="leaveDateSchool">Ended</label>
                                    <input type="number" min="1950" max="2019" placeholder="2019" id="leaveDateSchool"
                                        name="leaveDateSchool" class="form-control">
                                </div>
                                <div class="form-group col-md-1 col-xl-10">
                                    <label for="school" class="col-xl-12">School</label>
                                    <input type="text" id="school" name="school"
                                        class="autocomplete form-control col-xl-12" autocomplete="off"
                                        placeholder="Tecnológico de Monterrey">
                                    <div class="school" id="sugSchool"></div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6 col-xl-3">
                                    <label for="citySchool">City</label>
                                    <input type="text" class="form-control" id="citySchool" name="citySchool"
                                        placeholder="Monterrey">
                                </div>
                                <div class="form-group col-md-4 col-xl-3">
                                    <label for="stateSchool">State</label>
                                    <input type="text" class="form-control" id="stateSchool" name="stateSchool"
                                        placeholder="Nuevo León">
                                </div>
                                <div class="form-group col-md-4 col-xl-6">
                                    <label for="degree" class="col-xl-12">Program or Degree</label>
                                    <input type="text" placeholder="Bachelor of Arts" class="form-control col-xl-12"
                                        id="degree" name="degree">
                                </div>
                            </div>

                            <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <hr>
                    {{#each data.Studies}}
                    <div id="stats">
                        <h6><strong>Degree: </strong>{{degree}}</h6>
                        <h6><strong>School: </strong>{{school}}</h6>
                        <h6><strong>City: </strong>{{citySchool}}</h6>
                        <h6><strong>State: </strong>{{stateSchool}}</h6>
                        <h6><strong>Entry Date: </strong>{{entryDateSchool}}</h6>
                        <h6><strong>Finish Date: </strong>{{leaveDateSchool}}</h6>
                        <form action="/deletestudies/{{id}}" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <hr>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

</div>